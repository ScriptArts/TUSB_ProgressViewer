<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:TUSB_ProgressViewer.Styles"
    xmlns:model="clr-namespace:TUSB_ProgressViewer.Models">
    <Style x:Key="LoadingViewStyle" TargetType="Grid">
        <Setter Property="Background" Value="#9000"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Source={x:Static model:World.IsBusy}, Path=Value}" Value="True">
                <Setter Property="Visibility" Value="Visible"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding Source={x:Static model:World.IsBusy}, Path=Value}" Value="False">
                <Setter Property="Visibility" Value="Hidden"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>